<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nitap.attende.AdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SELECT COURSE TYPE" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:entries="@array/degrees"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SELECT BRANCH" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_height="48dp"
            android:entries="@array/branches"
            android:layout_width="match_parent"
            android:spinnerMode="dropdown"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SELECT YEAR" />

        <Spinner
            android:id="@+id/spinner4"
            android:layout_height="48dp"
            android:entries="@array/year"
            android:layout_width="match_parent"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SELECT SEMESTER" />

        <Spinner
            android:id="@+id/spinner5"
            android:layout_height="48dp"
            android:entries="@array/sem"
            android:layout_width="match_parent"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SELECT SECTION" />

        <Spinner
            android:id="@+id/spinner6"
            android:layout_height="48dp"
            android:entries="@array/section"
            android:layout_width="match_parent"
            android:spinnerMode="dropdown" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Section" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>